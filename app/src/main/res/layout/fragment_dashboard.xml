<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/sort_according_to" />

        <CheckBox
            android:id="@+id/audiostreamercheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:checked="true"
            android:gravity="center"
            android:text="@string/audio_streamer" />
        <CheckBox
            android:id="@+id/videostreamercheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/audiostreamercheck"
            android:checked="true"
            android:gravity="center"
            android:text="Video Streamer " />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/audiostreamercheck"
            android:layout_alignParentStart="true"
            >

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>



</FrameLayout>