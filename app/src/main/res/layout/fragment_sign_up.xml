<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_200sdp"
    android:layout_gravity="center"
    android:layout_height="@dimen/_250sdp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:background="@drawable/rounded_corner"
    tools:context=".SignUpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:layout_margin="@dimen/_14sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/closebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/close"
            android:textColor="#000000"
            android:layout_alignParentEnd="true"
            android:text="@string/x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_26sdp"
            android:textSize="@dimen/_18sdp"
            android:textColor="#000000"
            android:id="@+id/signupas"
            android:fontFamily="@font/opensans_bold"
            android:layout_centerHorizontal="true"
            android:text="@string/sign_up_as"/>
        <Button
            android:id="@+id/caster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/signupas"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="@string/broadcaster" />

        <Button
            android:id="@+id/userselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/caster"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/user" />
    </RelativeLayout>


</FrameLayout>